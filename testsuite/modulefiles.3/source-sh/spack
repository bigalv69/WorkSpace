#%Module
switch -- [module-info shell] {
    bash {
        source-sh bash spack/share/spack/setup-env.sh
    }
    ksh {
        source-sh ksh spack/share/spack/setup-env.sh
    }
    zsh {
        source-sh zsh spack/share/spack/setup-env.sh
    }
    tcsh {
        source-sh tcsh spack/share/spack/setup-env.csh
    }
    fish {
        source-sh fish spack/share/spack/setup-env.fish
    }
}
